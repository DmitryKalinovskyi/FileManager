    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="FileManager.Resources\ArtWork\folder-icon-1024x1024.ico" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="FileManager.View\" />
